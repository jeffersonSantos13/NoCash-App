<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.luiz1.nocash.LoginActivity"
    android:background="@drawable/bglogin">




<android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="180dp"
        android:id="@+id/textInputLayoutLogin">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Login *"
                android:singleLine="true"
                android:textColorHint="#ffffff">


            </android.support.design.widget.TextInputEditText>


</android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="270dp"
        app:passwordToggleEnabled="true"
        android:id="@+id/textInputLayoutSenha">

        <android.support.design.widget.TextInputEditText
        android:id="@+id/txtsenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha *"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColorHint="#ffffff"
        >


        </android.support.design.widget.TextInputEditText>


    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/txtcadlogin"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/textView"
        android:gravity="center"
        android:text="Clique Aqui!"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="220dp"
        android:layout_height="140dp"
        android:layout_marginTop="40dp"
        android:layout_alignEnd="@+id/btnsubmit"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnsubmit"
        app:srcCompat="@drawable/logomenu" />

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="43dp"
        android:background="#6cb907"
        android:text="Entrar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnsubmit"
        android:layout_alignStart="@+id/btnsubmit"
        android:layout_gravity="center"
        android:layout_marginBottom="43dp"
        android:layout_marginStart="19dp"
        android:text="NÃ£o possui uma conta?" />


</RelativeLayout>
