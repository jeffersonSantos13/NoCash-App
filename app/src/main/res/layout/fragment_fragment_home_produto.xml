<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.luiz1.nocash.FragmentHomeProduto"
    android:background="@drawable/bgcompra">


    <TextView
        android:id="@+id/txtnomeprod"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_alignStart="@+id/btnsubmit"
        android:layout_marginBottom="27dp"
        android:text="Nome do Produto"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:background="@color/accent_material_dark_1"
        android:text="Ver oferta" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtprecoprod"
        android:layout_alignStart="@+id/txtnomeprod"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="15dp"
        android:text="De:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/precoantigo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/textView8"
        android:text="AntigoPreçoProduto"

        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnsubmit"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginBottom="24dp"
        android:text="Por:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtprecoprod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/precoantigo"
        android:layout_marginStart="23dp"
        android:text="Preço Produto"
        android:textColor="@color/accent_material_dark_1"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imgprodutofrag"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_below="@+id/toolbarnav2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:scaleType="fitXY"
        android:src="@drawable/bgrecarga" />


</RelativeLayout>
