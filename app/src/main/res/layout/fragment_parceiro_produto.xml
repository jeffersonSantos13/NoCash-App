<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luiz1.nocash.FragmentParceiroProduto">


    <ImageView
        android:id="@+id/logoparca"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_action_account_circle" />

    <TextView
        android:id="@+id/nomeprod"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_above="@+id/descparca"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/logoparca"
        android:text="Nome do Parceiro"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/descparca"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/nomeprod"
        android:layout_alignStart="@+id/logoparca"
        android:layout_below="@+id/logoparca"
        android:text="Descrição do Parceiro"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/listaprodparceiro"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descparca"
        android:layout_centerHorizontal="true"
        android:text="Produtos Promocionais"
        android:textAllCaps="true"
        android:textColor="@color/button_text_color"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>
