<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luiz1.nocash.FragmentRecarga"
    android:orientation="vertical"
    android:background="@drawable/bgrecarga">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn3"
        android:layout_alignEnd="@+id/textView6"
        android:layout_toEndOf="@+id/textView3"
        android:textAlignment="textEnd"

        android:textColor="#6cb907"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginStart="17dp"
        android:text="R$"
        android:textAlignment="center"
        android:textColor="#6cb907"
        android:textSize="50sp" />


    <Button
        android:id="@+id/btn1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_centerVertical="true"
        android:text="+ R$ 10"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:text="+ R$ 20" />

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:text="+ R$ 50" />

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:text="+ R$ 100" />

    <TextView
        android:id="@+id/txtlimpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/button5"
        android:text="X"
        android:textAlignment="center"
        android:textColor="#6cb907"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnconfrecarga"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="89dp"
        android:background="#6cb907"
        android:text="Confirmar Recarga" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn1"
        android:layout_below="@+id/btn3"
        android:layout_marginTop="34dp"
        android:text="Recarga permitida de valores entre R$10 a R$5000" />


</RelativeLayout>
